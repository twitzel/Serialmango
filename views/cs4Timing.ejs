<!DOCTYPE html>

    <script  src = "./Scripts/cs4Timing.js"> </script>
    <script  src = "./Scripts/cs4Menu.js"> </script>
    <link rel='stylesheet'  href='./stylesheets/cs4Timing.css'>
    <link rel='stylesheet'  href='./stylesheets/cs4Menu.css'>

<html>
<head>
    <title>CS4 Timings</title>
    <meta name = "viewport" content = "width=device-width, initial-scale = 1.0">
</head>

<body class = "body" id="body">

    <h1>CS4 Timings Screen</h1>

    <header class="mainheader">
        <div id="menubutton">
            <button id = "buttonMenu"  onmousedown = "buttonMenu()">=</button>
        </div>
        <nav id = "menunav">
            <ul>
                <li><a href="cs4Home">Home</a></li>
                <li><a href="cs4VerticalScroll" >Scrolling</a></li>
                <li><a href="cs4Info" >Info</a></li>
                <li class="active"><a href="cs4Timing">Timing</a></li>
                <li><a href="cs4Settings">Settings</a></li>
                <li><a href="cs4Help">Help</a></li>
            </ul>
        </nav>
    </header>

    <div id="blackout">

        <div id = "title" >
            <button id = "buttonBackground"  onmousedown = "buttonBackground()"> BkGnd </button>
            <button id = "buttonClear"  onmousedown = "buttonClear()">Clear</button>
            <h2>Event Log</h2>

        </div>

        <pre>
            <div id="websocketlog" class="log">
                <h4> Waiting for connection...</h4>
            </div>
        </pre>


        <div id="bigdiv">
            <div id = timing1 class = timing >
                <fieldset id = "fieldset1">
                    <legend><b>Timing 1</b></legend>

                            Show Name: <input id=showname1 name=showname1 type=text value="ShowName" required style = "width: 8em" autofocus>

                    <div>
                            Output:   R4 Slides <input id=r4slides1 name=output1 value= "r4slides" type=radio checked>
                            R4 Audio<input id=r4audio1 name=output1 value = "r4audio" type=radio >
                    </div>

                    <div>
                            Directory:     <input id=directory1 name=directory1 type=text value="English" style = "width: 8em" required>
                            Current Cue: <input id=cue1 name=cue1 type=number value=1 required style = "width: 5em">
                    </div>

                    <div id="buttondiv1">
                            <button id = "goButton1"  onmousedown = "cueclick1()"> GO 1 </button>
                    </div>

                </fieldset>

            </div>


            <div id = timing2 class = timing>
                <fieldset>
                    <legend id = "legend1"><b>Timing 2</b></legend>

                    Show Name: <input id=showname2 name=showname2 type=text value="ShowName" required style = "width: 8em"  >

                    <div>
                        Output:   R4 Slides <input id=r4slides2 name=output2 value= "r4slides" type=radio checked>
                        R4 Audio<input id=r4audio2 name=output2 value = "r4audio" type=radio >
                    </div>

                    <div>
                        Directory:     <input id=directory2 name=directory2 type=text value="English" style = "width: 8em" required>
                        Current Cue: <input id=cue2 name=cue2 type=number value=1 required style = "width: 5em">
                    </div>

                    <div id="buttondiv2">
                         <button id = "goButton2"  onmousedown = "cueclick2()"> GO 2 </button>
                    </div>

                </fieldset>

            </div>

                <div id = timing3 class = timing>
                    <fieldset>
                        <legend><b>Timing 3</b></legend>

                        Show Name: <input id=showname3 name=showname3 type=text value="ShowName" required style = "width: 8em"  >

                        <div>
                            Output:   R4 Slides <input id=r4slides3 name=output3 value= "r4slides" type=radio checked>
                            R4 Audio<input id=r4audio3 name=output3 value = "r4audio" type=radio >
                        </div>

                        <div>
                            Directory:     <input id=directory3 name=directory3 type=text value="English" style = "width: 8em" required>
                            Current Cue: <input id=cue3 name=cue3 type=number value=1 required style = "width: 5em">
                        </div>

                        <div id="buttondiv3" >
                           <button id = "goButton3"  onmousedown = "cueclick3()"> GO 3 </button>
                        </div>

                    </fieldset>

                </div>

         </div>
    </div>

</body>
</html>